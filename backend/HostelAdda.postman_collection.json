            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Mess Food Bulk Order\",\n  \"description\": \"Ordering snacks for hostel\",\n  \"type\": \"ORDER\",\n  \"platform\": \"Swiggy\",\n  \"externalUrl\": \"https://www.swiggy.com/\",\n  \"expireAt\": \"2025-10-25T18:00:00.000Z\",\n  \"maxParticipants\": 10\n}"
            },
            "url": { "raw": "http://localhost:8000/api/posts", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["api", "posts"] }
          }
        },
        {
          "name": "Get All Posts",
          "request": {
            "method": "GET",
            "url": { "raw": "http://localhost:8000/api/posts", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["api", "posts"] }
          }
        },
        {
          "name": "Get Post By ID",
          "request": {
            "method": "GET",
            "url": { "raw": "http://localhost:8000/api/posts/{{postId}}", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["api", "posts", "{{postId}}"] }
          }
        },
        {
          "name": "Delete Post",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "http://localhost:8000/api/posts/{{postId}}", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["api", "posts", "{{postId}}"] }
          }
        }
      ]
    },
    {
