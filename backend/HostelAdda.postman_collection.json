      "item": [
        {
          "name": "Join Post",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "http://localhost:8000/api/participation/{{postId}}/join", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["api", "participation", "{{postId}}", "join"] }
          }
        },
        {
          "name": "Leave Post",
          "request": {
            "method": "DELETE",
